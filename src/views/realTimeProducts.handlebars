<h1>Real Time Products</h1>
<button id="btnAdd">Add Product</button>

<form class="nodisp">
  <div>
    <ul>
      <li>
        <label for="title">Título:</label>
        <input type="text" id="title" name="title" />
      </li>
      <li>
        <label for="desc">Descripción:</label>
        <input type="text" id="desc" name="desc" />
      </li>
      <li>
        <label for="price">Precio:</label>
        <input type="text" id="price" name="price" />
      </li>
      <li>
        <label for="thumbnail">Thumbnail:</label>
        <input type="text" id="thumbnail" name="thumbnail" />
      </li>
      <li>
        <label for="code">Código:</label>
        <input type="text" id="code" name="code" />
      </li>
      <li>
        <label for="stock">Stock:</label>
        <input type="text" id="stock" name="stock" />
      </li>
      <li>
        <label for="category">Categoría:</label>
        <input type="text" id="category" name="category" />
      </li>
      <li>
        <button id="saveProduct">Guardar Producto</button>
      </li>
    </ul>
  </div>
</form>


<div class="contenedorCards" id="contenedorCards" >
  {{#each productos}}
   <div class="card" id="products">
    <div class="card-img"><div class="img"><img src={{this.thumbnail}} alt=""></div></div>
    <div class="card-title">{{this.title}}</div>
    <div class="card-subtitle">{{this.desc}}</div>
    <hr class="card-divider">
    <div class="card-footer">
        <div class="card-price"><span>$</span>{{this.price}}</div>
        <button class="card-btn delete" id={{this.id}}>X</button>
        <button class="card-btn">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="m397.78 316h-205.13a15 15 0 0 1 -14.65-11.67l-34.54-150.48a15 15 0 0 1 14.62-18.36h274.27a15 15 0 0 1 14.65 18.36l-34.6 150.48a15 15 0 0 1 -14.62 11.67zm-193.19-30h181.25l27.67-120.48h-236.6z"></path><path d="m222 450a57.48 57.48 0 1 1 57.48-57.48 57.54 57.54 0 0 1 -57.48 57.48zm0-84.95a27.48 27.48 0 1 0 27.48 27.47 27.5 27.5 0 0 0 -27.48-27.47z"></path><path d="m368.42 450a57.48 57.48 0 1 1 57.48-57.48 57.54 57.54 0 0 1 -57.48 57.48zm0-84.95a27.48 27.48 0 1 0 27.48 27.47 27.5 27.5 0 0 0 -27.48-27.47z"></path><path d="m158.08 165.49a15 15 0 0 1 -14.23-10.26l-25.71-77.23h-47.44a15 15 0 1 1 0-30h58.3a15 15 0 0 1 14.23 10.26l29.13 87.49a15 15 0 0 1 -14.23 19.74z"></path></svg>
        </button>
    </div>
</div>
  {{/each}}
</div>

